{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceUser": {
            "defaultValue": null,
            "type": "string",
            "metadata": {
                "description": "The User that the tenant backend will be provisioned"
            }
        }
    },
    "resources": [
        {
            "name": "[toLower( concat('ad4401box', parameters('resourceUser')))]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2018-07-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "accessTier": "Hot",
                "supportsHttpsTrafficOnly": true
            },
            "dependsOn": [],
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "StorageV2",
            "tags": {
                "creator": "DevOps Team"
            }
        }
    ],
    "outputs": {}
}